<div class="d-flex align-items-center justify-content-center">
    <h1 class="align-items-center" style="margin-bottom: 15px;">Results for "<%=searchParams%>"</h1>
</div>

<div class="container">
    <div class="col d-flex align-items-center justify-content-center">
        <ul class="list-group">
            <% results.forEach(result =>{%>
                <li class="list-group-item">
                    <%if(result.name){%>
                        <p><strong><a href="/authors/results/<%=result.key%>"><%=result.name%></a></strong><br>
                            <%if(result.birth_date){%>
                                born: <%=result.birth_date%>
                            <%}%>
                        </p>
                        <p>Top work: <%=result.top_work%></p>
                        <p>Total works: <%=result.work_count%></p>
                    <%}%>
                </li>
            <% })%>
        </ul>
    </div>
</div>