<style>
    body{
        background-image: url("https://media.cntraveler.com/photos/5e73966ddf86d5000910707f/master/w_2580%2Cc_limit/George%2520Peabody%2520Library%2520E665TT.jpg");
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    li{
        background-color: rgba(255, 254, 224, 0.9) !important;
        border-radius: 10px ;
    }
</style>

<div class="d-flex align-items-center justify-content-center">
    <h1 class="align-items-center" style="margin-bottom: 15px;">Results for "<%=searchParams%>"</h1>
</div>

<div class="container">
    <div class="col d-flex align-items-center justify-content-center">
        <ul class="list-group">
            <% results.forEach(result =>{ %>
                <%const array = result.key.split("/")%>
                <%const id = array[array.length -1]%>
                <li class="list-group-item">
                    <% if(result.cover_i){ %>
                        <img style="margin-left: 10px; float: left;" class="img-thumbnail" src="https://covers.openlibrary.org/b/id/<%= result.cover_i %>-S.jpg" alt="<%= result.title %>">
                    <%}%>
                    <% if(result.title){%>
                        <p style="margin-left: 10px; text-align: center;"><a href="/books/results/<%=id%>"><%= result.title %></a> by <%=result.author_name%>:
                            <%=result.first_publish_year%> <%=result.first_publish_date%>
                        </p>
                    <%}%>    
                </li>
            <% }) %>
        </ul>
    </div>
</div>
