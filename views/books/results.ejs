<style>
    li, h1{
        max-width: 800px;
        background-color: rgba(255, 254, 224, 0.9) !important;
        border-radius: 10px;
    }
    h1{
        padding: 10px;
    }
</style>

<div class="d-flex align-items-center justify-content-center">
    <h1 class="align-items-center" style="margin-bottom: 15px;">Results for "<%=searchParams%>"</h1>
</div>

<div class="container">
    <div class="col d-flex align-items-center justify-content-center">
        <ul class="list-group">
            <% results.forEach(result =>{ %>
                <%const array = result.key.split("/")%>
                <%const id = array[array.length -1]%>
                <li class="list-group-item">
                    <% if(result.cover_i){ %>
                        <img style="margin-left: 10px; float: left;" class="img-thumbnail" src="https://covers.openlibrary.org/b/id/<%= result.cover_i %>-S.jpg" alt="<%= result.title %>">
                    <%}%>
                    <% if(result.title){%>
                        <p style="text-align: center;"><a href="/books/results/<%=id%>"><%= result.title %></a> by <%=result.author_name%>:
                            <%=result.first_publish_year%> <%=result.first_publish_date%>
                        </p>
                    <%}%>    
                </li>
            <% }) %>
        </ul>
    </div>
</div>
