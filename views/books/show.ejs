    <form action="/users/results/<%=id%>" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name">
        <label for="content">Leave your review:</label>
        <textarea type="text" name="content" id="content" plaaceholder="Leave your review..."></textarea>
        <input type="hidden" name="id" value="<%=id%>">
        <button type="submit">Submit Review</button>
    </form>
