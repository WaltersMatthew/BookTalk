                    <%}else{%>
                    <h2>Opening sentence:</h2>
                    <p>"<%=data.first_sentence%>"</p>
                    <%}%>
                <%}%>
            </div>
        </div>
    </div>
            
    <div class="container">
        <div class="row">
            <div class="col">
                <%if(typeof data.description == 'object'){ %>
                    <h2>Plot synopsis:</h2>
                    <%=data.description.value%>
                    <%}else{%>
                        <h2>Plot synopsis:</h2>
                        <%=data.description%>
                    <%}%>  
            </div>

            <div class="col">
                <% if(data.subjects){ %> 
                    <h2>Subjects and themes:</h2>
                    <ul>
                        <% data.subjects.forEach(subject => { %>
                            <li><%=subject%></li>
                        <%})%>
                    </ul>
            </div>
            
        </div>
    </div>
    
    <%if(reviews){%>
